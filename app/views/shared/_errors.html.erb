<% if obj.errors.any? %>
  <div class="panel panel-danger">
    <div class="panel-heading">
      <div class="panel-title">
        <h2><%= pluralize(obj.errors.count, "error") %></h2>
      </div>
      <div class="panel-body">
        <ul>
          <% obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>