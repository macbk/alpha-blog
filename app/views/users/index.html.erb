<h1>Users</h1>

<p>
  <%= link_to 'Create new user', signup_path %>
</p>
<div align="center">
  <% @users.each do |user| %>
    <ul style="list-style: none;">
      <li><%= link_to gravatar_for(user), user_path(user) %></li>
      <li><%= link_to user.username, user_path(user) %></li>
      <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
      <% if logged_in? && current_user.admin? %>
        <li><%= link_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure?" } %></li>
      <% end %>
    </ul>
  <% end %>
</div>

